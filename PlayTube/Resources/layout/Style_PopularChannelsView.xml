<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="72dp"
	android:layout_margin="0dp"
	app:cardCornerRadius="0dp"
	android:background="?attr/colorFill"
	app:cardElevation="0dp">>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:gravity="center_vertical">
		 
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical"
			android:padding="0dp"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/image"
				android:layout_width="36dp"
				android:layout_height="36dp"
				android:layout_centerVertical="true"
				android:layout_marginStart="12dp"
				android:src="@drawable/no_profile_image" 
			/>

			
			<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginStart="60dp"
				>
			
				<TextView
					android:id="@+id/name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:lines="1"
					android:text="The Ellen Show"
					android:textFontWeight="500"
					android:textSize="18dp"
					android:lineHeight="20dp"
					android:drawablePadding="5dp"
					/>

				<TextView
					android:id="@+id/subscribers"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@id/name"
					android:textColor="?attr/colorReact"
					android:text="38.3M Subscribers"
					android:lines="1"
					android:textFontWeight="400"
					android:textSize="14dp"
					android:lineHeight="20dp"
					/>
			</LinearLayout>
			 
			<androidx.appcompat.widget.AppCompatButton
				android:layout_width="wrap_content"
				android:layout_height="28dp"
				android:id="@+id/cont"
				android:layout_alignParentEnd="true"
				android:layout_centerVertical="true"
				android:background="@drawable/pif_btn_subscribe"
				android:text="@string/Lbl_Subscribe"
				style="?android:attr/borderlessButtonStyle"
				android:tag="false"
				android:paddingTop="4dp"
				android:paddingEnd="12dp"
				android:paddingBottom="4dp"
				android:paddingStart="12dp"
				android:layout_marginEnd="12dp"
				android:textAlignment="center"
				android:textAllCaps="false"
				android:forceDarkAllowed="false"
				android:textColor="@color/accent"
				android:textFontWeight="500"
				android:textSize="14dp"
				android:lineHeight="20dp"
				/>
			
		</RelativeLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="?attr/colorDivider"
			android:layout_marginTop="70dp"
			/>
	</FrameLayout>

</androidx.cardview.widget.CardView>