<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/cardview2"
	android:layout_gravity="fill"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:cardCornerRadius="0dp"
	app:cardBackgroundColor="?attr/colorFill"
	android:layout_margin="00dp"
	android:paddingTop="5dp"
	app:cardElevation="0dp"
	android:outlineAmbientShadowColor="?attr/colorFill"
	android:outlineSpotShadowColor="?attr/colorFill">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<FrameLayout
			android:id="@+id/Image_container"
			android:layout_width="match_parent"
			android:layout_height="200dp"
			android:orientation="vertical">

			<ImageView
				android:id="@+id/Imagevideo"
				android:layout_width="match_parent"
				android:layout_height="200dp"
				android:scaleType="centerCrop"
				android:src="@drawable/ImagePlacholder" />

			<TextView
				android:id="@+id/videoType"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:textColor="@color/gnt_white"
				android:textSize="12dp"
				android:visibility="invisible"
				android:textStyle="normal"
				android:layout_marginStart="0dp"
				android:layout_marginTop="0dp"
				android:background="@drawable/ThirdpartyRoundText"
				android:backgroundTint="#6441A4" />
			<TextView
				android:id="@+id/duration"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/gnt_white"
				android:textSize="14dp"
				android:textStyle="normal"
				android:layout_marginEnd="10dp"
				android:background="@xml/rounded_corner"
				android:paddingStart="5dp"
				android:paddingEnd="5dp"
				android:layout_gravity="bottom|end"
				android:text="3:30:55"
				android:layout_marginBottom="10dp" />
		</FrameLayout>

		<ProgressBar
			android:id="@+id/Progress"
			android:layout_width="match_parent"
			android:layout_height="5dp"
			style="?android:attr/progressBarStyleHorizontal"
			android:visibility="gone" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:padding="8dp"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical">

			<LinearLayout
                android:layout_width="34dp"
                android:layout_height="34dp"
				android:layout_gravity="top"
				android:gravity="center"
				android:layout_marginEnd="0dp"
				>
				<ImageView
					android:id="@+id/Image_Channel"
					android:layout_width="34dp"
					android:layout_height="34dp"
					android:scaleType="centerCrop"
					android:layout_gravity="center"
					android:src="@drawable/no_profile_image_circle"
					android:layout_marginEnd="0dp" />
			</LinearLayout>

			<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
				android:layout_marginStart="10dp"
				android:orientation="horizontal"
				android:visibility="visible"
				android:weightSum="10"
				>

				<LinearLayout
					android:id="@+id/info_container"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:paddingStart="0dp"
					android:paddingEnd="0dp"
					android:layout_gravity="center_vertical"
					android:gravity="center_vertical"
					android:layout_weight="9"
					android:paddingTop="0dp"
					android:paddingBottom="8dp">
			
					<TextView
						android:id="@+id/Title"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textSize="16dp"
						android:typeface="normal"
						android:text="Top 10 Unsportsmanlike Moments in Pro Top 10 Unsportsmanlike Moments in Pro Sports"
						android:gravity="start"
						android:lineHeight="20dp"
						android:textFontWeight="500"
						android:maxLines="2" />

					<TextView
						android:id="@+id/ChannelName"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:lines="1"
						android:layout_marginEnd="5dp"
						android:drawablePadding="5dp"
						android:textColor="?attr/colorReact"
						android:lineHeight="18dp"
						android:text="Channel name"
						android:textFontWeight="400"
						android:textSize="14dp"/>
					<TextView
						android:id="@+id/Views_Count"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:lines="1"
						android:textColor="?attr/colorReact"
						android:lineHeight="18dp"
						android:text="Views count"
						android:textFontWeight="400"
						android:visibility="gone"
						android:textSize="14dp"/> 
				</LinearLayout>

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_gravity="end"
					android:visibility="visible"
					android:layout_weight="1"
					android:gravity="end"
					>

					<TextView
						android:id="@+id/videoMenu"
						android:layout_width="20dp"
						android:layout_height="wrap_content"
						android:lines="1"
						android:gravity="center"
						android:layout_gravity="end"
						android:background="?android:attr/selectableItemBackgroundBorderless"
						android:textColor="?attr/colorReact"
						android:textSize="20dp"
						android:text=":"/> 
				</LinearLayout>
			</LinearLayout>
			
		</LinearLayout>
		
	</LinearLayout>
</androidx.cardview.widget.CardView>