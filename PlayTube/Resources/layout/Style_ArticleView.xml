<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/cardview2"
	android:layout_gravity="fill"
	android:layout_width="270dp"
	android:layout_height="250dp"
	app:cardCornerRadius="12dp"
	android:layout_margin="5dp"
	app:cardBackgroundColor="?attr/colorFill"
	android:paddingTop="5dp"
	app:cardElevation="2dp">
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		  
		<FrameLayout
			android:id="@+id/Image_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<ImageView
				android:id="@+id/Image"
				android:layout_width="270dp"
				android:layout_height="150dp"
				android:scaleType="centerCrop"
				android:src="@drawable/ImagePlacholder" />
			<TextView
				android:id="@+id/textCategory"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/gnt_white"
				android:textSize="12dp"
				android:textStyle="normal"
				android:layout_margin="5dp"
				android:background="@xml/rounded_corner"
				android:backgroundTint="#43a047"
				android:layout_gravity="bottom|start"  />
		</FrameLayout>
		 
		<TextView
			android:id="@+id/Title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="14dp"
			android:typeface="normal"
			android:padding="8dp"
			android:text="Why is Boxed Water Better?? Top reason given by food scientist (Must watch)"
			android:gravity="start"
			android:maxLines="2" />

		<LinearLayout
			android:id="@+id/info_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:paddingStart="8dp"
			android:paddingEnd="7dp"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical"
			android:layout_weight="0"
			android:paddingTop="5dp"
			android:paddingBottom="8dp">
			<ImageView
				android:id="@+id/Image_Channel"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:scaleType="centerCrop"
				android:layout_gravity="center"
				android:src="@drawable/no_profile_image_circle"
				android:layout_marginEnd="12dp" />
			<TextView
				android:id="@+id/ChannelName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:lines="1"
				android:drawablePadding="5dp"
				android:layout_marginEnd="5dp"
				android:textColor="?attr/colorReact"
				android:textSize="13dp"/>
			<TextView
				android:id="@+id/Views_Count"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:lines="1"
				android:textColor="?attr/colorReact"
				android:textSize="13dp"/> 
		</LinearLayout>
	</LinearLayout>
</androidx.cardview.widget.CardView> 