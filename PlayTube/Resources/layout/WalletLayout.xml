<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="?attr/colorFill"
	>

	<androidx.appcompat.widget.Toolbar
		android:id="@+id/toolbar"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_gravity="top"
		android:elevation="0dp"
		app:theme="@style/ToolbarTheme"
		app:titleTextAppearance="@style/Toolbar.TitleText"
		android:background="?attr/colorFill">

		<TextView
			android:id="@+id/toolbar_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:textFontWeight="600"
			android:textSize="18dp"
			android:lineHeight="24dp"
			android:text="@string/Lbl_Wallet"
			/>
	</androidx.appcompat.widget.Toolbar>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:layout_gravity="fill_vertical"
		>

		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:orientation="vertical"
			>

			<LinearLayout
				android:id="@+id/user_info"
				android:layout_width="match_parent"
				android:layout_height="88dp"
				android:orientation="horizontal"
				android:gravity="start|center_vertical"
				android:background="#F4F4F4"
				>

				<ImageView
					android:id="@+id/avatar"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:layout_marginStart="12dp"
					android:src="@drawable/no_profile_image_circle"
					/>

				<LinearLayout
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_marginStart="8dp">
					<TextView
						android:id="@+id/name"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textFontWeight="500"
						android:textSize="18dp"
						android:lineHeight="22dp"
						android:text="Justin Dorwart"
						/>
					<TextView
						android:id="@+id/tv_subname"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textFontWeight="400"
						android:textSize="14dp"
						android:lineHeight="18dp"
						android:text="@justindorwart"
						android:textColor="?attr/colorReact"/>
				</LinearLayout>
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical">
					<TextView
						android:id="@+id/myBalance"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="end"
						android:layout_marginEnd="12dp"
						android:textFontWeight="600"
						android:textSize="20dp"
						android:lineHeight="24dp"
						android:textStyle="normal"
						android:text="0.00"
						/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/Lbl_CurrentBalance"
						android:textColor="?attr/colorReact"
						android:layout_marginEnd="12dp"
						android:textFontWeight="400"
						android:textSize="14dp"
						android:lineHeight="18dp"
						/>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="?attr/colorFill"
				android:orientation="vertical">
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/describe"
					android:text="@string/Lbl_ReplenishMyBalance"
					android:layout_marginTop="12dp"
					android:layout_marginStart="12dp"
					android:layout_marginEnd="12dp"
					android:textStyle="normal"
					android:textFontWeight="600"
					android:textSize="24dp"
					android:lineHeight="32dp"
					/>

				<!--Amount Section -->
				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/description"
					android:layout_below="@+id/describe"
					android:layout_marginTop="4dp"
					android:layout_marginStart="12dp"
					android:layout_marginEnd="12dp"
					android:text="@string/Lbl_ReplenishDesc"
					android:textFontWeight="400"
					android:textSize="14dp"
					android:lineHeight="18dp"
					android:textColor="?attr/colorReact"
					/>

				<com.google.android.material.textfield.TextInputLayout
					style="@style/PifInputStyle"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="24dp"
					android:layout_marginStart="12dp"
					android:layout_marginEnd="12dp"
					app:boxStrokeWidth="1dp"
					app:boxCornerRadiusTopStart="40dp"
					app:boxCornerRadiusTopEnd="40dp"
					app:boxCornerRadiusBottomStart="40dp"
					app:boxCornerRadiusBottomEnd="40dp"
					app:endIconMode="custom"
					app:hintTextAppearance="@style/PifInputStyleHint"
					>
					<com.google.android.material.textfield.TextInputEditText
						android:layout_width="match_parent"
						android:layout_height="60dp"
						android:id="@+id/AmountEditText"
						android:ems="10"
						android:hint="@string/Lbl_Amount"
						android:lineHeight="20dp"
						android:paddingStart="32dp"
						android:inputType="number"
						android:text=""
						android:textFontWeight="500"
						android:textSize="18dp" />
				</com.google.android.material.textfield.TextInputLayout>
				
			</LinearLayout>

		</LinearLayout>

		<!--Buttons Section -->
		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/ReplenishButton"
			android:forceDarkAllowed="false"
			android:background="@drawable/pif_btn_round_two"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:layout_alignParentBottom="true"
			android:paddingTop="10dp"
			android:paddingEnd="16dp"
			android:paddingBottom="10dp"
			android:paddingStart="10dp"
			android:layout_marginStart="12dp"
			android:layout_marginEnd="12dp"
			android:layout_marginBottom="20dp"
			android:text="@string/Lbl_Replenish"
			android:textAllCaps="false"
			android:textColor="@color/lightcolor"
			android:textFontWeight="500"
			android:textSize="18dp"
			android:lineHeight="22dp"
			android:clickable="true"
			android:gravity="center"
			/>
	</RelativeLayout>
</LinearLayout> 