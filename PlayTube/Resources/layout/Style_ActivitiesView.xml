<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:visibility="visible"
        app:cardCornerRadius="0dp"
        android:layout_margin="0dp"
        app:cardBackgroundColor="?attr/colorFill"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ImageAct"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imageplacholder" />
            </LinearLayout>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="vertical"  >
            
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <LinearLayout
                        android:id="@+id/LikeActLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/IconLikeAct"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:src="@drawable/pif_ant_design_heart_outlite"
                            />
                        <TextView
                            android:id="@+id/CountLikeAct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center" 
                            android:paddingTop="0dp"
                            android:textFontWeight="500"
                            android:textSize="14dp"
                            android:lineHeight="21dp"
                            android:textColor="?attr/colorReact"
                            android:text="152K"
                            android:layout_marginStart="10dp"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="10dp"
                        android:layout_height="0dp" />
                    <LinearLayout
                        android:id="@+id/CommentActLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:layout_marginEnd="10dp" 
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                      <ImageView
                            android:id="@+id/IconCommentAct"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginStart="24dp"
                            android:src="@drawable/pif_chat_fill"
                            />
                      <TextView
                            android:id="@+id/CountCommentAct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="0dp"
                            android:textFontWeight="500"
                            android:textSize="14dp"
                            android:lineHeight="21dp"
                            android:textColor="?attr/colorReact"
                            android:text="47K"
                            android:layout_marginStart="10dp"
                            /> 
                    </LinearLayout> 
                    <LinearLayout
                      android:id="@+id/ShareActLayout"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="end|right"
                      android:layout_marginEnd="10dp" 
                      android:orientation="horizontal">
                      <ImageView
                            android:id="@+id/IconShareAct"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:src="@drawable/pif_send"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    >

                    <TextView
                        android:id="@+id/ContentAct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textFontWeight="400"
                        android:textSize="16dp"
                        android:lineHeight="20dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="88dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/TimeUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" 
                        android:textFontWeight="400"
                        android:textSize="13dp"
                        android:lineHeight="22dp"
                        android:layout_marginTop="0dp"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                        android:textColor="?attr/colorReact" /> 
                </LinearLayout>
            </RelativeLayout>
             
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>