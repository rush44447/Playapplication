<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:id="@+id/main"
    android:clickable="false"
    android:orientation="horizontal"
    android:background="?attr/selectableItemBackground"
    android:focusable="false"
    android:layout_alignParentStart="true"
    android:foregroundGravity="center_horizontal"
    android:gravity="start">

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/pif_btn_round_two"/>
             
                <ImageView
                    android:id="@+id/ImageUser"
                    android:scaleType="centerCrop"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:focusable="false"
                    android:clickable="false"
                    android:src="@drawable/no_profile_image_circle" />
        </LinearLayout>
           
        <LinearLayout
            android:id="@+id/message_container"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:orientation="vertical"
            android:focusable="false"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            >
            <TextView
                android:id="@+id/NotificationsText"
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:paddingEnd="5dp"
                android:textStyle="normal"
                android:textFontWeight="500"
                android:textSize="16dp"
                android:lineHeight="18dp"
                android:focusable="false"
                android:clickable="false"
                android:gravity="start"
                android:textAlignment="textStart" 
                android:text="Marshmello uploaded:  Marshmello, Khalid - Numb (2022 MTV VMAs)"
            />
            <TextView
                android:id="@+id/NotificationsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:clickable="false"
                android:focusable="false"
                android:layout_alignParentStart="true"
                android:gravity="start"
                android:textSize="15sp"
                android:maxLines="2"  
                android:textAlignment="textStart" 
            />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
			android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center"
			>

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="112dp"
                android:layout_height="63dp"
                android:layout_margin="0dp"
                android:gravity="center"
            />

            <ImageView
				android:id="@+id/more_menu"
                android:layout_width="15dp"
				android:layout_height="15dp"
                android:layout_marginTop="12dp"
				android:layout_gravity="top|right"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:tint="?attr/colorReact"
                android:src="@drawable/pif_more"
android:visibility="gone"
            />
		</LinearLayout>

    </LinearLayout>

</LinearLayout>