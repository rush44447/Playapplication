<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="top"
    android:layout_margin="0dp"
    android:fitsSystemWindows="true"
    android:background="@drawable/rounded_dialog"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pif_video_menu_top_bar"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Lbl_Logout"
                android:textFontWeight="600"
                android:textSize="22dp"
                android:lineHeight="24dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Lbl_Are_you_sure_you_went_to_logout"
                android:textFontWeight="400"
                android:textSize="14dp"
                android:lineHeight="18dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:textColor="?attr/colorReact"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="@dimen/two"
            >

            <LinearLayout
                android:layout_width="@dimen/zero_dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_log_out_cancel"
                    android:background="@drawable/pif_bg_round_six"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/Lbl_Cancel"
                    android:textAllCaps="false"
                    android:textFontWeight="500"
                    android:textSize="18dp"
                    android:lineHeight="28dp"
                    android:clickable="true"
                    android:paddingTop="10dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="10dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_alignParentBottom="true"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/zero_dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_log_out_yes"
                    android:background="@drawable/pif_btn_round_two"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/Lbl_Yes"
                    android:textAllCaps="false"
                    android:textFontWeight="500"
                    android:textSize="18dp"
                    android:lineHeight="28dp"
                    android:textColor="@color/lightcolor"
                    android:clickable="true"
                    android:paddingTop="10dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="10dp"
                    android:layout_marginEnd="12dp"
                    android:layout_alignParentBottom="true"
                    />
            </LinearLayout>

        </LinearLayout>

	    <View
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:background="?attr/colorDivider"
		    />
  </LinearLayout>

</RelativeLayout>