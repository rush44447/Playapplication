<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<TextView
		android:id="@+id/ContinueWithText"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:layout_marginBottom="10dp"
		android:layout_gravity="center"
		android:gravity="center"
		android:text="@string/Lbl_OrContinueWith"
		android:textColor="?attr/colorReact"
		android:textSize="16sp"/>

	<LinearLayout
		android:id="@+id/bntLoginGoogle"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:orientation="horizontal"
		android:layout_gravity="center"
		android:gravity="center"
		android:paddingStart="17dp"
		android:paddingEnd="17dp"
		android:layout_margin="10dp"
		android:backgroundTint="?attr/colorDivider"
		android:background="@drawable/round_button_outline">

		<ImageView
			android:layout_width="28dp"
			android:layout_height="28dp"
			android:layout_marginEnd="10dp"
			android:src="@drawable/icon_google_vector"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:text="@string/Lbl_ContinueWithGoogle"/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/bntLoginFacebook"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:orientation="horizontal"
		android:layout_gravity="center"
		android:gravity="center"
		android:paddingStart="17dp"
		android:paddingEnd="17dp"
		android:layout_margin="10dp"
		android:backgroundTint="?attr/colorDivider"
		android:background="@drawable/round_button_outline">

		<ImageView
			android:layout_width="28dp"
			android:layout_height="28dp"
			android:layout_marginEnd="10dp"
			android:src="@drawable/icon_facebook_vector"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:text="@string/Lbl_ContinueWithFacebook"/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/bntLoginWowonder"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:orientation="horizontal"
		android:layout_gravity="center"
		android:gravity="center"
		android:paddingStart="17dp"
		android:paddingEnd="17dp"
		android:layout_margin="10dp"
		android:backgroundTint="?attr/colorDivider"
		android:background="@drawable/round_button_outline">

		<ImageView
			android:layout_width="28dp"
			android:layout_height="28dp"
			android:layout_marginEnd="10dp"
			android:src="@mipmap/iconwowonder"/>

		<TextView
			android:id="@+id/txtWowonder"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="18sp"
			android:text="@string/Lbl_ContinueWith"/>

	</LinearLayout>

</LinearLayout>
