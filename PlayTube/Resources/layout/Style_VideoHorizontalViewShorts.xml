<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/cardview2"
	android:layout_gravity="fill"
	android:layout_width="154dp"
	android:layout_height="250dp"
	app:cardCornerRadius="15dp"
	android:layout_margin="5dp"
	app:cardBackgroundColor="?attr/colorFill"
	android:paddingTop="5dp"
	app:cardElevation="0dp"
	android:outlineAmbientShadowColor="?attr/colorFill"
	android:outlineSpotShadowColor="?attr/colorFill">
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<RelativeLayout
			android:id="@+id/Image_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">


			<ImageView
				android:id="@+id/Imagevideo"
				android:layout_width="154dp"
				android:layout_height="250dp"
				android:scaleType="centerCrop"
				android:src="@drawable/ImagePlacholder" />


			<TextView
				android:id="@+id/ChannelName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:lines="1"
				android:drawablePadding="5dp"
				android:layout_marginEnd="5dp"
				android:textColor="#B6B7B8"
				android:textSize="14dp"
				android:text="Chanel name"
				android:textFontWeight="400"
				android:padding="8dp"
				android:lineHeight="20dp"
				android:layout_alignParentBottom="true"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@drawable/pif_shorts_video_gradient"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="76dp"
				android:orientation="vertical"
				android:layout_alignParentBottom="true"
				android:padding="8dp">

				<TextView
					android:id="@+id/Title"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="16dp"
					android:text="Top 10 Unsportsmanlike Moments in Pro Top 10 Unsportsmanlike Moments in Pro Sports"
					android:gravity="start"
					android:maxLines="2"
					android:textFontWeight="500"
					android:textColor="#FFFFFF"
					android:lineHeight="20dp"/>

			</LinearLayout>


			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:gravity="end">

				<TextView
					android:id="@+id/videoMenu"
					android:layout_width="30dp"
					android:layout_height="wrap_content"
					android:lines="1"
					android:gravity="center"
					android:layout_gravity="top|end"
					android:background="?android:attr/selectableItemBackgroundBorderless"
					android:textColor="#FFFFFF"
					android:textSize="20dp"
					android:text=":"/>
			</LinearLayout>


			<TextView
				android:id="@+id/videoType"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:textColor="@color/gnt_white"
				android:textSize="12dp"
				android:visibility="gone"
				android:textStyle="normal"
				android:layout_marginStart="0dp"
				android:layout_marginTop="0dp"
				android:background="@drawable/ThirdpartyRoundText"
				android:backgroundTint="#6441A4" />
			<TextView
				android:id="@+id/duration"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/lightcolor"
				android:textSize="14dp"
				android:textStyle="normal"
				android:layout_marginEnd="10dp"
				android:background="@xml/rounded_corner"
				android:layout_gravity="bottom|end"
				android:text=""
				android:visibility="gone"
				android:textFontWeight="500"
				android:layout_marginBottom="10dp"/>
		</RelativeLayout>

	</LinearLayout>
</androidx.cardview.widget.CardView> 