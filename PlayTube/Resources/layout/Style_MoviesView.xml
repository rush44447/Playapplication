<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="162dp"
	android:layout_height="240dp"
	android:layout_margin="8dp"
	app:cardCornerRadius="10dp"
	app:cardElevation="0dp">


	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:gravity="center_vertical">

		<ImageView
			android:id="@+id/image"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:foreground="#1A000000"
			android:scaleType="centerCrop"
			android:src="@drawable/imageplacholder" />

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/pif_short_video_gradent_swipe"
			/>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="96dp"
			android:layout_gravity="bottom"
			android:gravity="top|center"
			android:orientation="vertical"
			android:layout_alignParentBottom="true"
			android:layout_marginStart="8dp"
			android:padding="0dp">

			<TextView
				android:id="@+id/name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:maxLines="2"
				android:gravity="start"
				android:text="Pirates of the Caribbean: At World's End"
				android:layout_marginTop="8dp"
				android:textFontWeight="500"
				android:textSize="18dp"
				android:lineHeight="22dp"
				android:textColor="@color/lightcolor" />
			 
			<TextView
				android:id="@+id/country"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="start"
				android:layout_gravity="center"
				android:text="Item NameItem"
				android:layout_marginTop="52dp"
				android:textFontWeight="400"
				android:textSize="14dp"
				android:lineHeight="18dp"
				android:textColor="@color/lightcolor" 
				android:alpha=".7"
				/>


			<TextView
				android:id="@+id/MovieRelease"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="start"
				android:layout_gravity="center"
				android:text="2007"
				android:layout_marginTop="70dp"
				android:textFontWeight="400"
				android:textSize="14dp"
				android:lineHeight="18dp"
				android:textColor="@color/lightcolor" 
				android:alpha=".7"
				/>

		</RelativeLayout>

	</RelativeLayout>
</androidx.cardview.widget.CardView>