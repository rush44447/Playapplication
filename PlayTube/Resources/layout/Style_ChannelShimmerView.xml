<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
   <RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical"
			android:padding="0dp"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/image"
				android:layout_width="36dp"
				android:layout_height="36dp"
				android:layout_centerVertical="true"
				android:layout_marginStart="12dp"
				android:background="@drawable/circlegradient"
				android:backgroundTint="@color/shimmerColor"
			/>

			
			<LinearLayout
                android:layout_width="190dp"
                android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginStart="60dp"
				>
			
				<TextView
					android:id="@+id/name"
					android:layout_width="match_parent"
					android:layout_height="20dp"
					android:lines="1"
					android:background="@drawable/edittextstyleone" 
					android:backgroundTint="@color/shimmerColor"
					android:textFontWeight="500"
					android:textSize="18dp"
					android:lineHeight="20dp"
					android:drawablePadding="5dp"
					/>

				<TextView
					android:id="@+id/subscribers"
					android:layout_width="170dp"
					android:layout_height="20dp"
					android:layout_below="@id/name"
					android:textColor="?attr/colorReact"
					android:background="@drawable/edittextstyleone" 
					android:backgroundTint="@color/shimmerColor"
					android:lines="1"
					android:textFontWeight="400"
					android:textSize="14dp"
					android:lineHeight="20dp"
					/>
			</LinearLayout>
			 
			<androidx.appcompat.widget.AppCompatButton
				android:layout_width="wrap_content"
				android:layout_height="28dp"
				android:id="@+id/cont"
				android:layout_alignParentEnd="true"
				android:layout_centerVertical="true"
				android:background="@drawable/pif_btn_subscribe"
				style="?android:attr/borderlessButtonStyle"
				android:tag="false"
				android:paddingTop="4dp"
				android:paddingEnd="12dp"
				android:paddingBottom="4dp"
				android:paddingStart="12dp"
				android:layout_marginEnd="12dp"
				android:textAlignment="center"
				android:textAllCaps="false"
				android:forceDarkAllowed="false"
				android:backgroundTint="@color/shimmerColor"
				android:textFontWeight="500"
				android:textSize="14dp"
				android:lineHeight="20dp"
				/>
			
		</RelativeLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="?attr/colorDivider"
			android:layout_marginTop="70dp"
			/>
</FrameLayout>
