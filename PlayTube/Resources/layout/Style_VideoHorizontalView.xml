<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/cardview2"
	android:layout_gravity="fill"
	android:layout_width="248dp"
	android:layout_height="225dp"
	app:cardCornerRadius="15dp"
	android:layout_margin="5dp"
	android:paddingTop="5dp"
	app:cardElevation="0dp"
	android:background="?attr/colorFill"
	android:outlineAmbientShadowColor="?attr/colorFill"
	android:outlineSpotShadowColor="?attr/colorFill">
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		  
		<FrameLayout
			android:id="@+id/Image_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<ImageView
				android:id="@+id/Imagevideo"
				android:layout_width="248dp"
				android:layout_height="140dp"
				android:scaleType="centerCrop"
				android:src="@drawable/ImagePlacholder" />
			<TextView
				android:id="@+id/videoType"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:textColor="@color/gnt_white"
				android:textSize="12dp"
				android:visibility="invisible"
				android:textStyle="normal"
				android:layout_marginStart="0dp"
				android:layout_marginTop="0dp"
				android:background="@drawable/ThirdpartyRoundText"
				android:backgroundTint="#6441A4" />
			<TextView
				android:id="@+id/duration"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/lightcolor"
				android:textSize="14dp"
				android:textStyle="normal"
				android:layout_marginEnd="10dp"
				android:background="@xml/rounded_corner"
				android:layout_gravity="bottom|end"
				android:text=""
				android:textFontWeight="500"
				android:layout_marginBottom="10dp"
				/>
		</FrameLayout>
		 
		<ProgressBar
			android:id="@+id/Progress"
			android:layout_width="match_parent"
			android:layout_height="5dp"
			style="?android:attr/progressBarStyleHorizontal"
			android:visibility="gone" />
		 
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:weightSum="10"
			android:padding="8dp"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical">

			<TextView
				android:id="@+id/Title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="16dp"
				android:layout_weight="10"
				android:typeface="normal"
				android:text="Top 10 Unsportsmanlike Moments in Pro Top 10 Unsportsmanlike Moments in Pro Sports"
				android:gravity="start"
				android:maxLines="2" 
				android:textFontWeight="500"
				
				android:lineHeight="26dp"
				/>

			<View
				android:layout_width="0dp"
				android:layout_height="1dp"
				android:layout_weight="1" />

			<TextView
				android:id="@+id/videoMenu"
				android:layout_width="30dp"
				android:layout_height="wrap_content"
				android:lines="1"
				android:gravity="center"
				android:layout_gravity="top|end"
				android:background="?android:attr/selectableItemBackgroundBorderless"
				android:textColor="?attr/colorReact"
				android:textSize="20dp"
				android:text=":"/> 
		</LinearLayout>
		 
		<LinearLayout
			android:id="@+id/info_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:paddingStart="8dp"
			android:paddingEnd="7dp"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical"
			android:layout_weight="0"
			android:paddingTop="0dp"
			android:paddingBottom="8dp">
			<ImageView
				android:id="@+id/Image_Channel"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:scaleType="centerCrop"
				android:layout_gravity="center"
				android:src="@drawable/no_profile_image_circle"
				android:visibility="gone"
				android:layout_marginEnd="12dp" />
			<TextView
				android:id="@+id/ChannelName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:lines="1"
				android:drawablePadding="5dp"
				android:layout_marginEnd="5dp"
				android:textColor="?attr/colorReact"
				android:textSize="14dp"
				android:text="Chanel name"
				android:textFontWeight="400"
				android:paddingStart="0dp"
				/>
			<TextView
				android:id="@+id/Views_Count"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:lines="1"
				android:visibility="gone"
				android:textColor="?attr/colorReact"
				android:textSize="13dp"/> 
		</LinearLayout>
	</LinearLayout>
</androidx.cardview.widget.CardView> 