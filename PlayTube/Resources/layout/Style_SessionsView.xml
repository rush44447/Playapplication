<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        >
    
        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/shape_bg_bottom_navigation"
            android:backgroundTint="#E7EFFE"
            android:gravity="center"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical"
            >
	        <ImageView
                android:id="@+id/card_pro_pic"
		        android:scaleType="centerCrop"
                android:layout_width="20dp"
                android:layout_height="20dp"
		        android:src="@drawable/pif_phone_fill"
                />
        </LinearLayout>

        <LinearLayout
	        android:layout_width="228dp"
	        android:layout_height="58dp"
            android:layout_marginStart="14dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Windows"
                android:textFontWeight="500"
                android:textSize="18dp" 
                android:lineHeight="22dp"
                />
            <TextView
                android:id="@+id/card_Browser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Browser: Google Chrome"
                android:textFontWeight="400"
                android:textSize="14dp"
                android:lineHeight="18dp"
                android:textColor="?attr/colorReact"
                /> 

            <TextView
                android:id="@+id/card_Seen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Seen: 1 second ago"
                android:textFontWeight="400"
                android:textSize="14dp"
                android:lineHeight="18dp"
                android:textColor="?attr/colorReact" 
                /> 

            <TextView
                android:id="@+id/card_Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IP Address: 95.12.11.21"
                android:textSize="12sp" 
                android:visibility="gone"
                />  
        
        

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:layout_marginEnd="12dp"
            >
        
            <at.markushi.ui.CircleButton 
                android:id="@+id/ImageCircle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:cb_pressedRingWidth="1dip"
                android:src="@drawable/pif_close_x"
                android:tint="#FF3235"
                android:layout_alignTop="@id/Image"
                app:cb_color="#FFEBEB"
                android:layout_alignWithParentIfMissing="false" />
        </LinearLayout>

    </LinearLayout>

    <View
	    android:layout_width="match_parent"
	    android:layout_height="1dp" 
	    android:background="?attr/colorDivider"   
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>