<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:fitsSystemWindows="true"
	android:layout_width="match_parent"
	android:background="@drawable/rounded_dialog"
	android:layout_height="wrap_content">
	<!--Head Page -->
	<LinearLayout
		android:id="@+id/mainLayout"
		android:layout_width="match_parent"
		android:layout_gravity="center_horizontal"
		android:gravity="center_horizontal"
		android:layout_height="20dp">
		<View
			android:layout_width="80dp" 
			android:layout_height="4dp"
			android:layout_gravity="center"
			android:gravity="center"
			android:background="?attr/colorDivider" />
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_marginEnd="10dp"
		android:layout_marginStart="10dp"
		android:layout_marginTop="8dp"
		android:padding="5dp"
		android:layout_height="wrap_content">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/Lbl_Filter"
			android:gravity="start|center"
			android:layout_centerVertical="true" 
			android:textSize="20sp" />
		<View
			android:layout_width="0dp"
			android:layout_height="1dp"
			android:layout_weight="1"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/Lbl_Reset"
			android:textColor="@color/accent"
			android:id="@+id/Resetbutton"/>
	</LinearLayout>
 
    <!--SortBy Section-->
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/Lbl_SortBy"
		android:layout_marginEnd="15dp"
		android:layout_marginStart="15dp"
		android:layout_marginTop="15dp"
		android:textColor="#888888"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_marginEnd="5dp"
		android:layout_marginStart="5dp"
		android:paddingStart="5dp"
		android:paddingEnd="5dp"
		android:layout_height="wrap_content">
		 
		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/ViewsButton"
			android:background="@drawable/round_button_pressed"
			android:layout_height="36dp"
			android:layout_width="100dp"
			android:padding="5dp"
			style="@style/TextAppearance.MaterialComponents.Body1"
			android:text="@string/Lbl_Views"
			android:textColor="@color/gnt_white"
			android:textSize="14sp"
			android:clickable="true"
			android:layout_margin="5dp"
			android:gravity="center"  />
		 
		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/SubscribersButton"
			android:background="@drawable/round_button_normal"
			android:layout_height="36dp"
			android:layout_width="100dp"
			android:padding="5dp"
			style="@style/TextAppearance.MaterialComponents.Body1"
			android:text="@string/Lbl_Subscribers"
			android:textColor="@color/accent"
			android:textSize="14sp"
			android:clickable="true"
			android:layout_margin="5dp"
			android:gravity="center"  />

		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/MostActiveButton"
			android:background="@drawable/round_button_normal"
			android:layout_height="36dp"
			android:layout_width="100dp"
			android:padding="5dp"
			style="@style/TextAppearance.MaterialComponents.Body1"
			android:text="@string/Lbl_MostActive"
			android:textColor="@color/accent"
			android:textSize="14sp"
			android:clickable="true"
			android:layout_margin="5dp"
			android:gravity="center"  />

	</LinearLayout>

    <!--Time Section-->
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/Lbl_TimeBy"
		android:layout_marginEnd="15dp"
		android:layout_marginStart="15dp"
		android:layout_marginTop="8dp"
		android:textColor="#888888"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_marginEnd="5dp"
		android:layout_marginStart="5dp"
		android:paddingStart="5dp"
		android:paddingEnd="5dp"
		android:layout_height="wrap_content">
		 
		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/TodayButton"
			android:background="@drawable/round_button_pressed"
			android:layout_height="36dp"
			android:layout_width="100dp"
			android:padding="5dp"
			style="@style/TextAppearance.MaterialComponents.Body1"
			android:text="@string/Lbl_Today"
			android:textColor="@color/gnt_white"
			android:textSize="14sp"
			android:clickable="true"
			android:layout_margin="5dp"
			android:gravity="center"  />
		 
		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/WeekButton"
			android:background="@drawable/round_button_normal"
			android:layout_height="36dp"
			android:layout_width="100dp"
			android:padding="5dp"
			style="@style/TextAppearance.MaterialComponents.Body1"
			android:text="@string/Lbl_ThisWeek"
			android:textColor="@color/accent"
			android:textSize="14sp"
			android:clickable="true"
			android:layout_margin="5dp"
			android:gravity="center"  />

		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/MonthButton"
			android:background="@drawable/round_button_normal"
			android:layout_height="36dp"
			android:layout_width="100dp"
			android:padding="5dp"
			style="@style/TextAppearance.MaterialComponents.Body1"
			android:text="@string/Lbl_ThisMonth"
			android:textColor="@color/accent"
			android:textSize="14sp"
			android:clickable="true"
			android:layout_margin="5dp"
			android:gravity="center"  />

	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_marginEnd="5dp"
		android:layout_marginStart="5dp"
		android:paddingStart="5dp"
		android:paddingEnd="5dp"
		android:layout_height="wrap_content">
		 
		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/YearButton"
			android:background="@drawable/round_button_normal"
			android:layout_height="36dp"
			android:layout_width="100dp"
			android:padding="5dp"
			style="@style/TextAppearance.MaterialComponents.Body1"
			android:text="@string/Lbl_ThisYear"
			android:textColor="@color/accent"
			android:textSize="14sp"
			android:clickable="true"
			android:layout_margin="5dp"
			android:gravity="center"  />
		 
		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/AllTimeButton"
			android:background="@drawable/round_button_normal"
			android:layout_height="36dp"
			android:layout_width="100dp"
			android:padding="5dp"
			style="@style/TextAppearance.MaterialComponents.Body1"
			android:text="@string/Lbl_AllTime"
			android:textColor="@color/accent"
			android:textSize="14sp"
			android:clickable="true"
			android:layout_margin="5dp"
			android:gravity="center"  />
		 
	</LinearLayout>

    <!--Buttons Section -->
    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"> 
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ApplyButton"
            android:background="@drawable/follow_button_profile_friends_pressed"
            android:layout_height="36dp"
            android:layout_width="match_parent"
            android:padding="5dp"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:text="@string/Lbl_ApplyFilter"
            android:textColor="@color/gnt_white"
            android:textSize="15sp"
            android:clickable="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="19dp"
            android:gravity="center"
            android:layout_marginBottom="10dp" />
        <View
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent" />
    </LinearLayout>
</LinearLayout>