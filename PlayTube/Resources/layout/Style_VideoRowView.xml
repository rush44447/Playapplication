<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/cardview2"
	android:layout_gravity="fill"
	android:layout_width="match_parent"
	android:layout_height="110dp"
	app:cardCornerRadius="12dp"
	app:cardBackgroundColor="?attr/colorFill"
	android:layout_margin="5dp"
	app:cardElevation="0dp"
	android:outlineAmbientShadowColor="?attr/colorFill"
	android:outlineSpotShadowColor="?attr/colorFill">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<FrameLayout
			android:id="@+id/Image_container"
			android:layout_width="164dp"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<ImageView
				android:id="@+id/Imagevideo"
				android:scaleType="centerCrop"
				android:layout_width="164dp"
				android:layout_height="96dp"
				android:src="@drawable/ImagePlacholder"/>
			<TextView
				android:id="@+id/videoType"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:textColor="@color/gnt_white"
				android:textSize="12dp"
				android:visibility="invisible"
				android:textStyle="normal"
				android:layout_marginStart="0dp"
				android:layout_marginTop="0dp"
				android:background="@drawable/ThirdpartyRoundText"
				android:backgroundTint="#6441A4" />
			<TextView
				android:id="@+id/duration"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentEnd="true"
				android:textColor="@color/lightcolor"
				android:textFontWeight="500"
				android:textSize="14dp"
				android:lineHeight="20dp"
				android:text="03:30:44"
				android:layout_marginEnd="10dp"
				android:layout_marginBottom="5dp"
				android:layout_gravity="bottom|end"
				android:translationY="-3dp"
				android:background="@xml/rounded_corner" />
		</FrameLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="7dp"
			android:layout_margin="0dp"
			android:layout_gravity="center_horizontal">
			  
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:weightSum="10"
				android:layout_gravity="center_vertical"
				android:gravity="center_vertical">

				<TextView
					android:id="@+id/Title"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="Tenet | Official Trailer"
					android:textFontWeight="500"
					android:textSize="18dp"
					android:lineHeight="22dp"
					android:layout_weight="10"
					
					android:gravity="start"
					android:maxLines="2" />

				<View
					android:layout_width="0dp"
					android:layout_height="1dp"
					android:layout_weight="1" />

				<TextView
					android:id="@+id/videoMenu"
					android:layout_width="30dp"
					android:layout_height="wrap_content"
					android:lines="1"
					android:gravity="center"
					android:layout_gravity="top|end"
					android:background="?android:attr/selectableItemBackgroundBorderless"
					android:textColor="?attr/colorReact"
					android:textSize="20dp"
					android:text=":"/> 

			</LinearLayout>

			<TextView
				android:id="@+id/ChannelName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:lines="1"
				android:drawablePadding="5dp"
				android:layout_marginEnd="5dp"
				android:textColor="?attr/colorReact"
				android:textFontWeight="400"
				android:text="Warner Bros. Pictures"
				android:textSize="14dp"
				android:lineHeight="18dp"
				/>
			<TextView
				android:id="@+id/Views_Count"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:ellipsize="none"
				android:layout_gravity="center_vertical"
				android:gravity="center_vertical"
				android:lines="1"
				android:textColor="?attr/colorReact"
				android:textFontWeight="400"
				android:textSize="14dp"
				android:lineHeight="18dp"
				android:text="19.9M views â€¢ 3 Years ago"
				android:layout_marginTop="5dp"/>

		</LinearLayout>

	</LinearLayout>
</androidx.cardview.widget.CardView>