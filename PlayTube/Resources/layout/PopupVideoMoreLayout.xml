<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:layout_gravity="top"
	android:layout_margin="0dp"
	android:fitsSystemWindows="true"
	android:background="@drawable/rounded_dialog">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="32dp"
		android:gravity="center">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/pif_video_menu_top_bar"/>

	</LinearLayout>

	<LinearLayout 
		android:id="@+id/menu_AddWatchLater"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:paddingStart="6dp"
		android:layout_height="50dp" >

		<ImageView
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical"
			android:layout_marginStart="8dp"
			android:tint="?attr/colorReact"
			android:src="@drawable/pif_save_to_watch_later" />
	 
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textFontWeight="500"
			android:textSize="16dp"
			android:lineHeight="22dp" 
			android:textStyle="normal"
			android:focusable="false"
			android:clickable="false" 
			android:lines="1"
			android:layout_marginStart="18dp"
			android:text="@string/Lbl_Addto_watchlater"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical" />

	</LinearLayout>

	<LinearLayout 
		android:id="@+id/menu_AddPlaylist"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:paddingStart="6dp"
		android:layout_height="50dp" >

		<ImageView
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical"
			android:layout_marginStart="8dp"
			android:tint="?attr/colorReact"
			android:src="@drawable/pif_video_menu_save_play_list" />
	 
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textFontWeight="500"
			android:textSize="16dp"
			android:lineHeight="22dp" 
			android:textStyle="normal"
			android:focusable="false"
			android:clickable="false" 
			android:lines="1"
			android:layout_marginStart="18dp"
			android:text="@string/Lbl_Addto_playlist"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical" />

	</LinearLayout>

	<LinearLayout 
		android:id="@+id/menu_download"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:paddingStart="6dp"
		android:layout_height="50dp" >

		<ImageView
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical"
			android:layout_marginStart="8dp"
			android:tint="?attr/colorReact"
			android:src="@drawable/pif_video_menu_fi_download" />
	 
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textFontWeight="500"
			android:textSize="16dp"
			android:lineHeight="22dp" 
			android:textStyle="normal"
			android:focusable="false"
			android:clickable="false" 
			android:lines="1"
			android:layout_marginStart="18dp"
			android:text="@string/Lbl_DownloadVideo"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical" />

	</LinearLayout>

	<LinearLayout 
		android:id="@+id/menu_Share"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:paddingStart="6dp"
		android:layout_height="50dp" >

		<ImageView
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical"
			android:layout_marginStart="8dp"
			android:tint="?attr/colorReact"
			android:src="@drawable/pif_video_menu_upload" />
	 
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textFontWeight="500"
			android:textSize="16dp"
			android:lineHeight="22dp" 
			android:textStyle="normal"
			android:focusable="false"
			android:clickable="false" 
			android:lines="1"
			android:layout_marginStart="18dp"
			android:text="@string/Lbl_Share"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical" />

	</LinearLayout>

	<LinearLayout 
		android:id="@+id/menu_Remove"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:paddingStart="6dp"
		android:layout_height="50dp" >

		<ImageView
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical"
			android:layout_marginStart="8dp"
			android:tint="?attr/colorReact"
			android:src="@drawable/pif_delete" />
	 
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textFontWeight="500"
			android:textSize="16dp"
			android:lineHeight="22dp" 
			android:textStyle="normal"
			android:focusable="false"
			android:clickable="false" 
			android:lines="1"
			android:layout_marginStart="18dp"
			android:text="@string/Lbl_Not_interested"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical" />

	</LinearLayout>

	<LinearLayout 
		android:id="@+id/menu_Report"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:paddingStart="6dp"
		android:layout_height="50dp" >

		<ImageView
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical"
			android:layout_marginStart="8dp"
			android:tint="?attr/colorReact"
			android:src="@drawable/ic_flags" />
	 
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textFontWeight="500"
			android:textSize="16dp"
			android:lineHeight="22dp" 
			android:textStyle="normal"
			android:focusable="false"
			android:clickable="false" 
			android:lines="1"
			android:layout_marginStart="18dp"
			android:text="@string/Lbl_Report"
			android:layout_gravity="center_vertical"
			android:gravity="center_vertical" />

	</LinearLayout> 
</LinearLayout>