<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/black">

	<FrameLayout
		android:id="@+id/root"
		android:clickable="true"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:keepScreenOn="true">

		<com.google.android.exoplayer2.ui.StyledPlayerView
			android:id="@+id/player_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:auto_show="false"
			app:controller_layout_id="@layout/exo_playback_control_view"/>
	</FrameLayout>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/pif_short_video_gradent_swipe"
		/>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="bottom"
		android:paddingBottom="0dp">

		<LinearLayout
			android:layout_width="290dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_marginStart="12dp"
			android:layout_marginBottom="12dp"
			android:orientation="vertical">

			<LinearLayout
				android:id="@+id/userLayout"
				android:layout_width="wrap_content"
				android:layout_height="36dp"
				android:gravity="center_vertical"
				android:orientation="horizontal" >

				<ImageView
					android:id="@+id/imageAvatar"
					android:layout_width="36dp"
					android:layout_height="36dp"
					android:src="@drawable/no_profile_image_circle"
					android:padding="0dp" />

				<TextView
					android:id="@+id/username"
					android:layout_width="79dp"
					android:layout_height="wrap_content"
					android:layout_marginStart="8dp"
					android:maxLines="2"
					android:textColor="@color/lightcolor"
					android:textFontWeight="500"
					android:textSize="16dp"
					android:lineHeight="19.12dp"
					/>

				<androidx.appcompat.widget.AppCompatButton
					android:layout_width="86dp"
					android:layout_height="32dp"
					android:id="@+id/cont"
					android:textFontWeight="500"
					android:textSize="16dp"
					android:lineHeight="20dp"
					android:layout_marginStart="8dp"
					android:layout_alignParentEnd="true"
					android:tag="false"
					android:paddingTop="6dp"
					android:paddingBottom="6dp"
					android:gravity="center"
					android:textAlignment="center"
					android:textAllCaps="false"
					style="?android:attr/borderlessButtonStyle"
					android:background="@drawable/pif_btn_shorts_sub"
					android:text="@string/Lbl_Subscribe"
					android:textColor="@color/lightcolor" />

			</LinearLayout>

			<PlayTube.Library.Anjo.SuperTextLibrary.SuperTextView
				android:id="@+id/tv_descreption"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="8dp"
				android:layout_marginBottom="0dp"
				android:maxLength="200"
				android:textColor="@color/lightcolor"
				android:textStyle="normal"
				android:textFontWeight="400"
				android:textSize="16dp" 
				android:lineHeight="24dp"
				/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="34dp"
			android:layout_height="wrap_content"
			android:layout_marginEnd="10dp"
			android:gravity="center_horizontal"
			android:orientation="vertical"
			android:paddingTop="0dp"
			android:paddingBottom="0dp">

			<LinearLayout
				android:id="@+id/likeLayout"
				android:layout_width="match_parent"
				android:layout_height="46dp"
				android:orientation="vertical"
				android:layout_marginTop="0dp">

				<RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
					android:gravity="center"
					
					>
					
					<FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
					
						<ImageView
							android:id="@+id/img_like"
							android:layout_width="26dp"
							android:layout_height="26dp"
							android:layout_gravity="center_horizontal"
							android:padding="0dp"
							android:tint="@color/lightcolor"
							android:src="@drawable/pif_video_screen_like"
						/>
					
					</FrameLayout>

					<TextView
						android:id="@+id/tv_likeCount"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:textColor="@color/lightcolor"
						android:text="0"
						android:textFontWeight="500"
						android:textSize="13dp" 
						android:lineHeight="16dp"
						android:layout_marginTop="30dp"
						android:textAlignment="center"
						/>
				</RelativeLayout>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/DislikeLayout"
				android:layout_width="34dp"
				android:layout_height="46dp"
				android:orientation="vertical"
				android:layout_marginTop="24dp">
				
				<RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
					android:orientation="vertical"
					>
					<FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
						>
						<ImageView
							android:id="@+id/img_Dislike"
							android:layout_width="26dp"
							android:layout_height="26dp"
							android:layout_gravity="center"
							android:padding="0dp"
							android:tint="@color/lightcolor"
							android:src="@drawable/pif_video_screen_dis_like" />

					</FrameLayout>

					<TextView
						android:id="@+id/tv_DislikeCount"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:textColor="@color/lightcolor"
						android:text="0"
						android:textFontWeight="500"
						android:textSize="13dp" 
						android:lineHeight="16dp"
						android:layout_marginTop="30dp"
						android:textAlignment="center"/>
				</RelativeLayout>

			</LinearLayout>

			<LinearLayout
				android:id="@+id/commentLayout"
				android:layout_width="26dp"
				android:layout_height="46dp"
				android:orientation="vertical"
				android:visibility="gone"
				android:layout_marginTop="5dp">

				<RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
					android:orientation="vertical"
					>
					
					<FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
					
						<ImageView
							android:id="@+id/img_comment"
							android:layout_width="26dp"
							android:layout_height="26dp"
							android:layout_gravity="center"
							android:padding="0dp"
							android:tint="@color/gnt_white"
							android:src="@drawable/icon_comment_vector" />
					</FrameLayout>

					<TextView
						android:id="@+id/tv_comment_count"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:textColor="#f1f1f3"
						android:text="0"
						android:textAlignment="center"
						android:textSize="12dp" 
						android:layout_marginTop="30dp"
						/>
				</RelativeLayout>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/viewsLayout"
				android:layout_width="26dp"
				android:layout_height="46dp"
				android:orientation="vertical"
				android:layout_marginTop="24dp">

				<RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
				
					<ImageView
						android:id="@+id/img_views"
						android:layout_width="26dp"
						android:layout_height="26dp"
						android:layout_gravity="center"
						android:padding="0dp"
						android:tint="@color/lightcolor"
						android:src="@drawable/pif_video_view_count" />

					<TextView
						android:id="@+id/tv_views_count"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:textColor="@color/lightcolor"
						android:text="0"
						android:textFontWeight="500"
						android:textSize="13dp" 
						android:lineHeight="16dp"
						android:layout_marginTop="30dp"
						android:textAlignment="center"/>
				
				</RelativeLayout>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/moreLayout"
				android:layout_width="26dp"
				android:layout_height="46dp"
				android:orientation="vertical"
				android:layout_marginTop="24dp"
				>

				<RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
				
					<ImageView
						android:id="@+id/img_more"
						android:layout_width="26dp"
						android:layout_height="26dp"
						android:layout_gravity="center"
						android:padding="0dp"
						android:tint="@color/lightcolor"
						android:src="@drawable/pif_more" />
				
				</RelativeLayout>
			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

	<ImageView
		android:id="@+id/back"
		android:layout_width="24dp"
		android:layout_height="24dp"
		android:layout_marginStart="12dp"
		android:layout_marginTop="15dp"
		android:src="@drawable/ic_action_left_arrow2" /> 

</FrameLayout>