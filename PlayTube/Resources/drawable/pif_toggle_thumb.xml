<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_checked="true"
        >

        <layer-list>

            <item
                android:top="3dp"
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                >
                <shape
                    android:shape="oval"
                    android:dither="true"
                    android:useLevel="false"
                    android:visible="true"
                    >
                    <solid
                        android:color="#0F64F7"/>
                    <size
                        android:width="16dp"
                        android:height="16dp"/>
                </shape>
            </item>
        </layer-list>

    </item>

    <item
        android:state_checked="false"
        >

        <layer-list>
            <item
                android:top="3dp"
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                >
                <shape
                    android:shape="oval"
                    android:dither="true"
                    android:useLevel="false"
                    android:visible="true"
                    >
                    <solid
                        android:color="#A1A6B2"/>
                    <size
                        android:width="16dp"
                        android:height="16dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
